#!/usr/bin/env bash

globalUserName=$(git config --include --global user.name)
globalUserEmail=$(git config --include --global user.email)

basePath=~

if [[ $1 == "--path" ]]; then
    basePath=$2
    shift 2
fi

cmd=$1
shift

case $cmd in
user)
    echo "[Global]"
    echo "user.name = $globalUserName"
    echo "user.email = $globalUserEmail"
    ;;
"" | help)
    echo
    echo "Usage: repos [--path <base_path>] [command]"
    echo
    echo "Options:"
    echo "  --path <base_path>  Use a different base path than ~."
    echo
    echo "Commands:"
    echo "  check           Show unpushed commits, stashes, and branches per repo."
    echo "  fetch [args]    Run git fetch in each repo."
    echo "  git [args]      Run git command in each repo."
    echo "  help            Show this screen."
    echo "  list            List all repos."
    echo "  status [args]   Run git status in each repo."
    echo "  user            List global git user settings and repos with different user settings."
    echo
    exit
    ;;
esac

DIRS=()
while IFS= read -r -d '' dir; do
    DIRS+=("$dir")
done < <(find "$basePath" \( \
  -path "$basePath/Music" -o \
  -path "$basePath/Pictures" -o \
  -path "$basePath/Desktop" -o \
  -path "$basePath/Library" \
  \) -prune -o -name .git -type d -print0 2>/dev/null | sort -z)

for dir in "${DIRS[@]}"; do
    (
        cd "$dir/.."
        repo=$(realpath "$dir/..")
        repo=${repo/~/\~}

        case $cmd in
        check)
            # Gather info
            branch=$(git symbolic-ref --short HEAD 2>/dev/null || echo "detached")

            # Unpushed commits on current branch
            upstream=$(git rev-parse --abbrev-ref '@{upstream}' 2>/dev/null)
            if [[ -n "$upstream" ]]; then
                ahead=$(git rev-list --count "$upstream"..HEAD 2>/dev/null || echo 0)
            else
                ahead="no upstream"
            fi

            # Stash count
            stashes=$(git stash list 2>/dev/null | wc -l | tr -d ' ')

            # Local branches (excluding current)
            branches=$(git branch --format='%(refname:short)' | grep -v "^${branch}$" | wc -l | tr -d ' ')

            # Dirty working tree
            dirty=""
            if [[ -n $(git status -s 2>/dev/null) ]]; then
                dirty=" dirty"
            fi

            # Only show if there's something interesting
            if [[ "$ahead" != "0" || "$stashes" != "0" || "$branches" != "0" || -n "$dirty" ]]; then
                echo "[$repo]"
                echo "  branch: $branch$dirty"
                if [[ "$ahead" == "no upstream" ]]; then
                    echo "  ahead: (no upstream)"
                elif [[ "$ahead" != "0" ]]; then
                    echo "  ahead: $ahead commits"
                fi
                if [[ "$stashes" != "0" ]]; then
                    echo "  stashes: $stashes"
                fi
                if [[ "$branches" != "0" ]]; then
                    echo "  branches: $branches other"
                fi
                echo
            fi
            ;;
        list)
            echo "$repo"
            ;;
        fetch)
            echo "[$repo]"
            git fetch "$@"
            ;;
        git)
            echo "[$repo]"
            git "$@"
            ;;
        status)
            if [[ $(git status -s) ]]; then
                echo "[$repo]"
                git status "$@"
            fi
            ;;
        user)
            userName=$(git config user.name)
            userEmail=$(git config user.email)

            if [[ "$globalUserName" != "$userName" || "$globalUserEmail" != "$userEmail" ]]; then
                echo
                echo "[$repo]"
                if [[ "$globalUserName" != "$userName" ]]; then
                    echo "user.name = $userName"
                fi
                if [[ "$globalUserEmail" != "$userEmail" ]]; then
                    echo "user.email = $userEmail"
                fi
            fi
            ;;
        esac
    )
done
